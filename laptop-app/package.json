{
  "name": "laptop-app",
  "version": "1.0.11",
  "description": "Laptop application for Voice-Controlled Terminal Management System",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node dist/index.js",
    "start:dev": "npm run dev",
    "start:prod": "npm run build && npm run start",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "lint": "echo 'No linter configured. Run type-check instead.' && npm run type-check",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "prestart": "npm run build"
  },
  "keywords": [
    "terminal",
    "ai-agent",
    "langchain"
  ],
  "author": "Roman Barinov <rbarinov@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@langchain/openai": "^0.0.19",
    "@types/form-data": "^2.2.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "form-data": "^4.0.5",
    "langchain": "^1.1.1",
    "node-pty": "^1.0.0",
    "openai": "^4.20.0",
    "qrcode": "^1.5.3",
    "ws": "^8.14.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@types/qrcode": "^1.5.5",
    "@types/ws": "^8.5.8",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2"
  }
}
